<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.seanma.inclassassignment05_zhenzhenm.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textColor="#FFAA66CC"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/type_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type the event name"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textColor="#FFAA66CC"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/type_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type the date"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Time"
        android:textColor="#FFAA66CC"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/type_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type the time"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Note"
        android:textColor="#FFAA66CC"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/type_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type the note"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add to Schedule"
        android:onClick="addSchedule" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Schedule"
        android:onClick="goSchedule" />

    </LinearLayout>

    <TextView
        android:id="@+id/eventText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="#FFAA66CC"
        android:textSize="18sp"
        android:textStyle="bold"/>

</LinearLayout>
